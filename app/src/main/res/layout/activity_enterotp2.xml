<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    tools:context=".Enterotp2">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/otpverification"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/get_OTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP received"
        android:textSize="20dp"
        android:padding="30dp"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textStyle="bold"
        android:id="@+id/textMobileShownumber"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP1"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP2"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP3"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP4"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP5"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/input_OTP6"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            tools:ignore="LabelFor"
            android:background="@drawable/backgroundbuttongetotp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't got the OTP."
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/textSendOTPAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND OTP"
            android:layout_marginStart="10sp"
            android:textSize="18sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            />




    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:id="@+id/submit_OTP"
            android:layout_margin="40dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT OTP"
            android:background="@drawable/backgroundbuttongetotp"
            android:textColor="@color/white"/>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:id="@+id/progressBarSubmit"
            android:layout_gravity="center"/>


    </FrameLayout>




</LinearLayout>